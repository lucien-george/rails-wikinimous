<div class="wrapper">
  <div class="container text-center">
  <%= link_to "New Article", new_article_path, class: "new-article-link btn btn-primary" %>
    <h1>All Articles</h1>
    <ul class="list-group">
      <% @articles.each do |article| %>
        <li class="list-group-item">
          <h3><%= link_to article.title, article_path(article) %></h3>
          <p><%= article.content %></p>
          <%= link_to "Delete Article", article_path(article), method: 'delete', data: { confirm: "Are you sure you want to delete the article?" }, class: "btn btn-danger" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
