<div class="wrapper">
  <div class="container text-center">
    <h1>All Articles</h1>
    <ul class="list-group">
      <% @articles.each do |article| %>
        <li class="list-group-item">
          <h3><%= link_to article.title, article_path(article), class: "article-title" %></h3>
          <p><%= article.content %></p>
          <%= link_to "Delete Article", article_path(article), method: 'delete', data: { confirm: "Are you sure you want to delete the article?" }, class: "delete-button" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
